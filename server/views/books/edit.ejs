<%- include ../partials/header.ejs %>
<!-- Content for the Add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="titleTextField">Book Title</label>
          <input
            type="text"
            class="form-control"
            id="titleTextField"
            name="title"
            value="<%= book.Title %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="descriptionTextArea">Description</label>
          <textarea
            type="text"
            class="form-control"
            id="descriptionTextArea"
            name="description"
            value="<%= book.Description%>"
            required
          ></textarea>
        </div>

        <div class="form-group">
          <label for="priceTextField">Price</label>
          <input
            type="text"
            class="form-control"
            id="priceTextField"
            name="price"
            value="<%= book.Price %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="authorTextField">Author</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            name="author"
            value="<%= book.Author %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="genreTextField">Genre</label>
          <input
            type="text"
            class="form-control"
            id="genreTextField"
            name="genre"
            value="<%= book.Genre%>"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
        Submit
        </button>

        <a href="/books" class="btn btn-warning">
        Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<%- include ../partials/footer.ejs %>
